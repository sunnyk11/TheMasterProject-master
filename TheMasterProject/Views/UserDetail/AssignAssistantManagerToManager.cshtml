@model TheMasterProject.Models.ManagerToAmRelation

@using (Html.BeginForm("AssignAssistantManager", "UserDetail", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ManagerId)
    <div class="row">
        <div class="col-md-3" style="margin:auto;margin-bottom:-4px">
            <label>Assign AM</label>
        </div>
        <div class="col-md-6" style="margin:auto;">
            @Html.ListBoxFor(model => model.AMIds, new MultiSelectList(Model.AMList, "Id", "FirstName"), new { @class = "form-control", @multiple = "multiple" })
        </div>
        <div class="col-md-3" style="margin:auto;margin-bottom:-4px">
            <label>To</label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6"></div>
        <div class="col-md-3">
            <input type="submit" class="btn btn-primary" value="Assign Team Lead" />
        </div>
    </div>

}

<link href="~/Content/Helper/chosen.min.css" rel="stylesheet" />
<script src="~/Content/Helper/chosen.jquery.min.js"></script>

<script>
    $("#AMIds").chosen({
        width: "100%"
    });

</script>
