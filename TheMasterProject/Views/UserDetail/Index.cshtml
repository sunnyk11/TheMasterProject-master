        <h6 class="m-0 font-weight-bold text-primary">Current Leads To Be Followed</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered" style="width:100%" id="LeadDetails">
                <thead>
                    <tr>
                        <th>
                            S.No
                        </th>

                        <th>
                            Lead Id
                        </th>
                        <th>
                            Person Name
                        </th>
                        <th>
                            Mobile No.
                        </th>
                        <th>
                            Assigned To
                        </th>
                        <th>
                            Current Status
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Where(x => x.LeadIncomingFrom == TheMasterProject.Enum.LeadComingFrom.Website.ToString()))
                    {
                        <tr>
                            <td></td>
                            <td>
                                @item.BuyerId
                            </td>
                            <td>
                                @item.BuyerName
                            </td>
                            <td>
                                @item.MobileNo
                            </td>
                            @if (item.ManagerAssigned == null)
                            {
                                <td>
                                    --No Project Lead--
                                </td>
                            }
                            else
                            {
                                <td>
                                    @item.ManagerDetail.FullName
                                </td>
                            }
                            @if (item.currenStatus == null)
                            {
                                <td>--New Lead--</td>
                            }
                            else
                            {
                                <td>
                                    @item.currenStatus
                                </td>
                            }
