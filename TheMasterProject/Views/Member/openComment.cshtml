@model IEnumerable<TheMasterProject.Models.Comments>
@{ 
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
               <tr>
                   <th style="width:70%">Comment</th>
                   <th style="width:30%">Time</th>
               </tr>
            </thead>
            <tbody>
                @foreach(var comment in Model)
                {
                    <tr>
                        <td style="width:70%">@comment.CommentDetails</td>
                        <td style="width:30%">@comment.CommentDateTime</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
